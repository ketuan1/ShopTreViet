mixin PugImg(url="https://source.unsplash.com/random/?Cryptocurrency&1",width="500",height="500")
	img(data-src=url, alt="", class="lozad", width=width, height=height)
mixin btnViewAll(text="Xem thêm")
	a(href="" x-link class='btn-primary-2 btn ' + attributes.class)
		span=text
		em.fa-light.fa-arrow-right-long
mixin ProductDetailMain()
	.item-product-main(x-loop-item="Product")
		div(class="div-ratio pt-[110%] xl:pt-[calc(358/300*100%)] overflow-visible")
			.wrap.relative
				.img
					a(href="" x-link class="flex-center img-ratio-center pt-[calc(237/263*100%)]")
						img(src="./img/11.png", alt="" x-img)
				.relative
					a(href="" x-title x-link class="text-base md:text-2xl text-center block mt-3") Muối Chấm
					.wrap-button.flex-center(class="xl:absolute xl:flex hidden top-full w-full")
						+btnViewAll('Xem thêm').small.mt-2
mixin ItemNewsMain()
	.item-news-main(x-loop-item="News" x-loop-mode="NewsItemMain")
		.img(class="mb-5 rounded-2.5 overflow-hidden zoom-img")
