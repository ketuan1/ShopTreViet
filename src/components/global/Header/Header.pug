header.header(class="text-white py-4")
	.container.mx-auto
		.row(class="flex items-center justify-between")
			.col(class="w-3/12")
				.header-logo
					a(href="/")
						img(src="/img/logo.png", alt="Mercury Chemical", class="h-12")
			.col(class="w-9/12 header-right")
				nav(class="flex items-center justify-end")
					ul(class="header-menu")
						li
							a(href="/", class="") Trang chủ
						li.current
							a(href="/ve-chung-toi", class="") Về chúng tôi
						li
							a(href="/linh-vuc-hoat-dong", class="") Lĩnh vực hoạt động
						li
							a(href="/san-pham", class="") Sản phẩm
						li
							a(href="/phat-trien-ben-vung", class="") Phát triển bền vững
						li
							a(href="/tin-tuc", class="") Tin tức
						li
							a(href="/lien-he", class="") Liên hệ
					.header-language
						.wpml-ls
							a(href="/", class="") VN
						ul.wpml-ls-sub-menu
							li
								a(href="/", class="") VN
					div(class="ml-4 header-search")
						i(class="fa-light fa-magnifying-glass text-xl text-white pointer-events-none")
					include HeaderHambuger.pug
.header-search-form
	.close.flex.items-center.justify-center.absolute.top-0.right-0.bg-white.text-3xl.cursor-pointer(class="w-12.5 h-12.5")
		i.fa-light.fa-xmark
	.container
		.wrap-form-search-product
			.productsearchbox
				input(type="text" placeholder="Bộ ghế sofa 2022")
				button
