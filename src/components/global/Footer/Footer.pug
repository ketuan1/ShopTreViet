			.col(class="lg:rem:w-6/12 xl:rem:w-4/12")
				.wrap-form
					.form-group
						input(type="email" class="w-full" placeholder="Nhập email của bạn")
						button(type="submit" class="btn btn-primary btn-subscribe")
							.text Đăng ký
							.icon
