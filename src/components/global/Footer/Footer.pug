							.caption 123 Đường ABC, Quận XYZ, TP. HCM
						.info 
							.icon 
								i.fa-solid.fa-phone
							.caption 0909090909
						.info 
							.icon 
								i.fa-solid.fa-envelope
							.caption info@example.com
			.col(class="md:rem:w-6/12 lg:rem:w-3/12")
