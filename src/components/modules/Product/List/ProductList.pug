						.filter-category
							div(class="flex-between gap-2 cursor-pointer title-sidebar")
								h3(class="title-lg font-semibold") Danh mục sản phẩm
								i(class="fa-solid fa-chevron-down")
							.list-filter
								ul
									-for(i=0; i<8; i++)
										li
											a(href="")
												span Sản phẩm 
												span(class="count") 10
						.filter-attribute
							div(class="flex-between gap-2 cursor-pointer title-sidebar")
								h3(class="title-lg font-semibold") Danh mục sản phẩm
								i(class="fa-solid fa-chevron-down")
							.list-filter
								ul
									-for(i=0; i<8; i++)
										li
											a
												input(type="checkbox")
												label(for="") Sản phẩm 

						.filter-attribute
							div(class="flex-between gap-2 cursor-pointer title-sidebar")
								h3(class="title-lg font-semibold") Danh mục sản phẩm
								i(class="fa-solid fa-chevron-down")
							.list-filter
								ul
									-for(i=0; i<8; i++)
										li
											a
												input(type="checkbox")
												label(for="") Sản phẩm 
						.filter-wrapper-mobile
							.group-category
								div(class="px-[15px] lg:px-6")
									div(class="xl:hidden left-0 w-full grid grid-cols-2 p-2")
										.btn(class="bg-primary-1 h-12.5 col-span-2 text-white flex-center text-lg font-bold btn-close") Đóng
			.col(class="lg:rem:w-9/12")
				.row.gap-y-8
					-for(i=0; i<6; i++)
						.col(class="w-full sm:rem:w-1/2 xl:rem:w-1/3")
							.item-product 
								.hover-img 
									a(href="" class="img-ratio ratio:pt-[372_420] img-zoom")
										img(src="./img/1.png", alt="")
									.wrap-button-view
										.action-view
											a(class="btn-view btn-actions")
