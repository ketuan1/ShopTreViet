									h3 
										a(href="") Grocery & Organic Supermarket Responsive Template
									.category 
										a(href="") Blog, 
										a(href="") Animated
									.price 400.000 VNĐ
				.wrap-pagination(class="flex-center mt-10")
					.list-pagination
						ul
							li
								a(href="") 1
							li.active
								a(href="") 2
							li
								a(href="") 3